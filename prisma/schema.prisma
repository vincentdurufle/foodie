generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String   @unique
  username String
  Recipes  Recipe[]
}

model Recipe {
  id          Int                @id @default(autoincrement())
  title       String
  description String
  category    CategoryRecipeType
  type        RecipeType

  author      User?        @relation(fields: [authorId], references: [id])
  authorId    Int?
  ingredients Ingredient[]
}

model Ingredient {
  id      Int      @id @default(autoincrement())
  name    String
  recipes Recipe[]
}

enum CategoryRecipeType {
  VEGAN
  VEGETARIAN
  PESCATERIAN
  CARNIVOROUS
}

enum RecipeType {
  ENTREE
  MAIN
  DESSERT
}
